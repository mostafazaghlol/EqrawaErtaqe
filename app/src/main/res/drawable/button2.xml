<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#bf000000" />
            <gradient android:angle="-90" android:startColor="#bf161616" android:endColor="#bf000000"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#bf050505" />
            <solid android:color="#bf0d0c0c"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners
                android:bottomLeftRadius="20dp"
                android:bottomRightRadius="20dp"
                android:topLeftRadius="20dp"
                android:topRightRadius="20dp" />
            <stroke android:width="1dip" android:color="#bf000000" />
            <gradient android:angle="-90" android:startColor="#bfffffff" android:endColor="#bfffffff" />
        </shape>
    </item>
</selector>