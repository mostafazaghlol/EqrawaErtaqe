<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context="com.alsalilweb.androiddeveloper.eqrawaertaqe.Fragment_VoiceMail">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:src="@drawable/microphone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_gravity="right"
        android:layout_marginRight="40dp"
        android:textSize="15dp"
        android:textColor="#084D6E"
        android:textStyle="bold"
        android:id="@+id/signup"
        android:text="يمكنك إرسال رسالة صوتية للمعلم لتقيمها:"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="right|center"
        android:layout_marginTop="25dp"
        android:background="@android:color/white">

        <EditText
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:backgroundTint="#ffffff"
            android:textColor="#084D6E"
            android:hint="اكتب عنوان لرسالتك الصوتية"
            android:textSize="16dp"
            android:id="@+id/voicemail"
            android:gravity="center" />
        <TextView
            android:layout_width="30dp"
            android:layout_height="42dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/microphone_small"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="إيقاف"
            android:textColor="#084D6E"
            android:textStyle="bold"
            android:background="@android:color/white"
            android:id="@+id/button2"
            android:layout_alignTop="@+id/button"
            android:layout_centerHorizontal="true"
            />

        <Button
            android:layout_width="290dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:text="إرسال التسجيل"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_marginTop="20dp"
            android:id="@+id/send"
            android:background="#084D6E"
            android:layout_below="@+id/button4"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="      إيقاف تشغيل المقطع المسجل       "
            android:id="@+id/button4"
            android:textColor="#084D6E"
            android:textStyle="bold"
            android:background="@android:color/white"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/button2"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="تسجيل"
            android:id="@+id/button"
            android:textColor="#084D6E"
            android:textStyle="bold"
            android:background="@android:color/white"

            android:layout_marginTop="38dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="28dp"
            android:layout_marginEnd="28dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  تشغيل   "
            android:id="@+id/button3"
            android:textColor="#084D6E"
            android:textStyle="bold"
            android:background="@android:color/white"
            android:layout_marginLeft="28dp"
            android:layout_marginStart="28dp"
            android:layout_above="@+id/button4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</LinearLayout>
